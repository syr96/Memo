<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.yullmaster.memo.post.dao.PostDAO">
	<select id="selectPostList" resultType="com.yullmaster.memo.post.model.Post" parameterType="int">
		SELECT
			`id`
			, `userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` DESC
	</select>
	
	<select id="selectPost" resultType="com.yullmaster.memo.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{postId}
	</select>
	
	<delete id="deletePost" parameterType="int">
		DELETE FROM `post`
		WHERE
			`id` = #{postId}
	</delete>
</mapper>